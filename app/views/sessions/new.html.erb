<div class="row col-md-6 col-md-offset-3">
  <div class="signup-form">
    <%= form_tag sessions_path, method: 'post' do %>
        <div class="form-group">
          <%= text_field_tag :email, '', class: 'form-control', placeholder: 'Email' %>
        </div>
        <div class="form-group">
          <%= password_field_tag :password, '', class: 'form-control', placeholder: 'Password' %>
        </div>

        <div class="form-group">
          <%= submit_tag 'Login', class: 'btn btn-block btn-success-outline' %>
        </div>
    <% end %>
  </div>
  <%= link_to 'Login via Facebook', '/auth/facebook', class: 'btn btn-block btn-primary-outline' %>
</div>

